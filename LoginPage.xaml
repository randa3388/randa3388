<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="test2_sql_f.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="1" CornerRadius="0">
                <Label Text="Login page" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                <Entry Placeholder="Number" x:Name="number"  HorizontalOptions="FillAndExpand"/>
                <Entry Placeholder="Code" x:Name="code" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout HorizontalOptions="FillAndExpand" Padding="40" Margin="90" Orientation="Horizontal">
                <Button Text="Login" x:Name="login" Clicked="login_Clicked" BackgroundColor="LightPink" Rotation="-50" HorizontalOptions="FillAndExpand" Margin="0"/>
                <Button Text="Home" x:Name="home" Clicked="home_Clicked" BackgroundColor="LightPink" Rotation="-50" HorizontalOptions="FillAndExpand" Margin="0"/>

            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>